<div class="d-flex justify-content-between align-items-end">
	<div class="cart--item-options">
		<div class="d-flex justify-content-between">
			{{#each options}}
				{{> ../item/customDropdown}}
			{{/each}}
		</div>
		<select name="itemVariantsSelect" required="required" hidden>
			{{#ifCond variants.length '!==' 1}}
				<option value=""{{#unless variantId}} selected="selected"{{/unless}}></option>
			{{/ifCond}}
			{{#each variants}}
				<option value="{{id}}"
						data-inventory="{{inventory}}"
						data-option1="{{option1}}"
					{{#if option2}} data-option2="{{option2}}"{{/if}}
					{{#ifCond ../variants.length '===' 1}} selected="selected"{{else}}{{#ifCond ../variantId '===' id}} selected="selected"{{/ifCond}}{{/ifCond}}
				>
					{{option1}}{{#if option2}} / {{option2}}{{/if}}
				</option>
			{{/each}}
		</select>
	</div>

	<div class="cart--item-inventory text-end">
		<div>{{lang 'cart_total_in_stock'}}</div>
		<div class="inventory" data-inventory>X{{quantityMax}}</div>
	</div>
</div>