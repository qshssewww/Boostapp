<div class="cart--quantity-box{{#if quantityErrorText}} p-b-4{{/if}}">
	<label class="bsapp--label">{{lang 'quantity'}}</label>
	<div class="d-flex justify-content-between align-items-end">
		<div class="form--group-btns d-flex">
			<button class="btn btn--icon btn--primary-revert js--qty-btn"
					data-type="plus"
					type="button"><i class="fa-light fa-angle-up"></i></button>
			<button class="btn btn--icon btn--primary-revert js--qty-btn"
					data-type="minus"
					type="button"><i class="fa-light fa-angle-down"></i></button>
		</div>
		<div class="s-22 ltr">X{{quantity}}</div>
	</div>
	{{#if quantityErrorText}}
		<p class="error">{{quantityErrorText}}</p>
	{{/if}}
</div>