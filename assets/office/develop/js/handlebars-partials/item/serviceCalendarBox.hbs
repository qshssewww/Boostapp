<div class="cart--service-box bsapp--slide-box js--toggle-service-box">
	<label class="bsapp--label">{{lang 'due'}}</label>
	<div class="cart--service-selected d-flex align-items-center">
		<div class="bsapp--icon">
			<i class="fa-light fa-calendar-day s-24 bsapp-fa"></i>
		</div>
		<span class="service-name s-18">{{strFormatDateTime date time}}</span>
	</div>
	<i class="fa-light fa-angle-left ltr--rotate s-20"></i>
</div>
<div class="cart--service-box-slide">
	<div class="modal-header justify-content-center justify-content-lg-start js--toggle-service-box">
		<button class="close-box-modal"
				aria-label="close modal"
				type="button"><i class="fa-light fa-angle-right ltr--rotate s-20"></i></button>
		<h3 class="h3">{{lang 'cart_date_time_selection'}}</h3>
	</div>
	<div class="modal-body p-0">
		<div id="calendarServiceContent"
			 class="bsapp--calendar--content"></div>
		<div class="cart--item-detail cart--package-inputs">
			<div>
				<div class="form--group_half d-flex justify-content-between">
					<div id="timeServiceContent"
						 class="form--group-items"></div>
					<div id="durationServiceContent"
						 class="form--group-items"></div>
				</div>
			</div>
		</div>
	</div>
	<div class="modal-footer without--b-top">
		<button id="saveServiceDateTime"
				class="btn btn--primary btn--big btn--full"
				type="button">{{lang 'save'}}</button>
	</div>
</div>