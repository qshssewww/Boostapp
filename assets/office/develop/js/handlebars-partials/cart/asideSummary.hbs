<div class="aside--summary-title d-none d-lg-flex justify-content-between">
	<div class="d-flex align-items-center">
		<p class="summary--qty">{{lang 'cart_quantity'}}</p>
		<p>{{lang 'product_name_shopping_cart'}}</p>
	</div>
	<div class="summary--total">
		<p>{{lang 'summary_2'}}</p>
	</div>
</div>

<div class="aside--summary-items">
	{{#each items}}
		{{> asideSummaryItem}}
	{{/each}}
	{{#with showNote}}
		<div class="show aside--summary-item d-flex justify-content-center align-items-center text-center aside--summary-note fade-in js--aside-note {{class}}">
			<span>{{lang noteTextKey}}</span>
		</div>
	{{/with}}
</div>

<div class="aside--summary-total">
	<div class="summary-total--details summary-total--discount d-flex justify-content-between{{#if openDiscountModal}} with-hover js--summary-total--discount{{/if}}{{#ifCond discount.amount '>' 0}} c-red{{/ifCond}}">
		<p class="s-18">{{lang 'cart_general_discount'}}</p>
		{{#ifCond discount.amount '>' 0}}
			<p class="s-18 ltr">-{{strFormatPrice discount.amount}}</p>
		{{else}}
			<p class="s-18">+</p>
		{{/ifCond}}
	</div>
	<div class="summary-total--details d-flex justify-content-between">
		<p class="s-18">{{lang 'total_before_vat'}}</p>
		<p class="s-18">{{strFormatPrice totalPriceMinusVat}}</p>
	</div>
	<div class="summary-total--details d-flex justify-content-between">
		<p class="s-18">{{lang 'vat'}} {{#if vatAmount}}{{vatAmount}}{{else}}0{{/if}}%</p>
		<p class="s-18">{{#if vatPrice}}{{strFormatPrice vatPrice}}{{else}}{{strFormatPrice '0'}}{{/if}}</p>
	</div>
	<div class="summary-total--details d-flex justify-content-between">
		<p class="s-18">{{lang 'total'}}</p>
		<p class="s-18">{{strFormatPrice totalPrice}}</p>
	</div>
	<div class="d-flex summary-total--btns">
		<button id='{{#if getCartClientIdS}}checkoutBtn{{else}}checkoutBtnModal{{/if}}'
				class="btn btn--primary btn--big btn--full d-flex justify-content-center justify-content-lg-between align-items-center"
				{{#ifCond itemCount '===' 0}} disabled="disabled"{{/ifCond}}
				type="button">
			<span>{{lang 'checkout'}}</span>
			<span class="d-none d-lg-inline-block">{{strFormatPrice totalPrice}}</span>
		</button>
		<button id="cartSummaryOptionsAside"
				class="cart--options-btn btn btn--primary-revert btn--icon icon-big cart-btn-options js--cart-btn-options"
				{{#ifCond itemCount '===' 0}} disabled="disabled"{{/ifCond}}
				type="button">
			<i class="fa-solid fa-ellipsis-vertical"></i>
		</button>
	</div>
</div>